# Genomes configuration for ref_genomes template
# -----------------------------------------------------------------------------
# Define which genomes to download and which indices (if any) to build.
# This file is read by run.sh. Use YAML (requires Python + PyYAML) or provide
# JSON with an identical structure if PyYAML is unavailable.
#
# Global settings
with_ercc: true               # append ERCC92 sequences to each genome
nfcore:
  pipeline: nf-core/references
  revision: stable            # or a tag like "2.3.0"
  profile: docker             # docker | singularity | conda
  extra_args: ""              # extra flags passed through to nextflow run
  tools: "bowtie1,bowtie2,bwamem1,bwamem2,createsequencedictionary,dragmap,faidx,gffread,hisat2,hisat2_extractsplicesites,intervals,kallisto,msisensorpro,rsem,rsem_make_transcript_fasta,salmon,sizes,star"

# Output layout
# When running ad-hoc with `--out /data/genomes`, outputs land under that path.
out_root: "{{ ctx.project_dir }}"

# List of genomes to manage
# For each genome:
#  - id:       short name for output folders
#  - fasta:    URL or local path to FASTA (.fa or .fa.gz)
#  - gtf:      URL or local path to annotation (optional)
#  - indices:  list of tools to build; if omitted or empty, ALL supported tools are used by default
#  - ercc:     optional per-genome override; if set, overrides global with_ercc
# Supported tools: star, bwa, bwamem2, bowtie2, hisat2, minimap2, salmon, kallisto

genomes:
  - id: GRCh38
    fasta: https://ftp.ebi.ac.uk/pub/databases/gencode/Gencode_human/release_49/GRCh38.primary_assembly.genome.fa.gz
    gtf:   https://ftp.ebi.ac.uk/pub/databases/gencode/Gencode_human/release_49/gencode.v49.primary_assembly.annotation.gtf.gz
    indices: [bowtie1,bowtie2,bwamem1,bwamem2,faidx,gffread,salmon,sizes,star]
  - id: GRCm39
    fasta: https://ftp.ebi.ac.uk/pub/databases/gencode/Gencode_mouse/release_M38/GRCm39.primary_assembly.genome.fa.gz
    gtf:   https://ftp.ebi.ac.uk/pub/databases/gencode/Gencode_mouse/release_M38/gencode.vM38.primary_assembly.annotation.gtf.gz
    indices: [bowtie1,bowtie2,bwamem1,bwamem2,faidx,gffread,salmon,sizes,star]
  - id: mRatBN7.2
    # Ensembl release; update release number if needed
    fasta: https://ftp.ensembl.org/pub/release-115/fasta/rattus_norvegicus/dna/Rattus_norvegicus.GRCr8.dna.toplevel.fa.gz
    gtf:   https://ftp.ensembl.org/pub/release-115/gtf/rattus_norvegicus/Rattus_norvegicus.GRCr8.115.gtf.gz
    indices: [bowtie1,bowtie2,bwamem1,bwamem2,faidx,gffread,salmon,sizes,star]
